from flask import Flask, jsonify

app = Flask(__name__)

@app.route('/')
def home():
    return "Welcome to the Flask Web Server!"

@app.route('/api/data', methods=['GET'])
def get_data():
    sample_data = {
        "name": "ChatGPT",
        "type": "AI Model",
        "version": "4.0"
    }
    return jsonify(sample_data)

if __name__ == '__main__':
    app.run(debug=True)
